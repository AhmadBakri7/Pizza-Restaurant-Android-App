<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/offer">

    <Spinner
        android:id="@+id/spinnerPizzaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <Spinner
        android:id="@+id/spinnerPizzaSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etOfferStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Offer Start Date"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etOfferEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Offer End Date"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />


    <EditText
        android:id="@+id/etTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total Price"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etPizzaCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pizza Count"
        android:inputType="number"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddOffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Special Offer"
        android:background="@color/green"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:elevation="2dp"/>
</LinearLayout>
