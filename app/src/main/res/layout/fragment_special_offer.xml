<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_pizza_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Name" />

        <TextView
            android:id="@+id/textView_pizza_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Size" />

        <TextView
            android:id="@+id/textView_offer_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offer Dates" />

        <TextView
            android:id="@+id/textView_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button_background"
            android:text="Order Now" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_pizza"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/margarita" />

</LinearLayout>
